<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".ProductDisplayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <!-- Product Image Centered -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_product"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="5dp"/>

        <!-- Product Name, Category & Nutri Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/tv_proname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:hint="Product Name"
                    android:textColor="@color/dark_green"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tv_proCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Product Category"
                    android:textColor="@color/dark_green"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Nutri Score Image (Smaller & Closer) -->
            <ImageView
                android:id="@+id/iv_nutri"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Nutritional Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:text="Nutritional Details:"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Product Description -->
        <TextView
            android:id="@+id/tv_proDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#2A2929"
            android:hint="Product Description"
            android:layout_margin="5dp"/>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.BarcodeBuddy"
    tools:context=".SetAllergyActivity">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/allergy"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Allergic ingredient:"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:textColor="@color/dark_green"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spinner_allergic"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginTop="10dp"
            android:popupBackground="#94E699"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:entries="@array/ingredient"
            android:spinnerMode="dropdown"
            />

        <Button
            android:id="@+id/btn_save_allergic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/dark_green"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginEnd="10dp"
            android:text="Save"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selected_allergy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:background="@drawable/edittext_border"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"/>



</LinearLayout>
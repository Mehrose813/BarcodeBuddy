<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF428612"
        android:src="@drawable/profile" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/profile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/editicon" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/profile"
        android:layout_marginLeft="-42dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/circle" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/profile"
        android:layout_alignBottom="@id/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-29dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="-12dp"
        android:background="@drawable/darkcircle" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/profile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        android:layout_marginRight="77dp"
        android:layout_marginBottom="-21dp"
        android:background="@drawable/darkcircle" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/profile"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/lightcircle" />

    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_a2"
        android:layout_below="@+id/profile"
        android:padding="10dp"
        android:textColor="#FF428612"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name1"
        android:padding="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:text="Alieena"
        android:textColor="#9BBA6E"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="#FF428612"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aleena@gmail.com"
        android:layout_below="@+id/tv_email1"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#9BBA6E"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:layout_below="@+id/tv_email"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="#FF428612"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12345"
        android:layout_below="@+id/tv_pass"
        android:padding="10dp"
        android:textColor="#9BBA6E"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_button"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/tv_password"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF428612"
        android:textSize="25sp" />

</RelativeLayout>

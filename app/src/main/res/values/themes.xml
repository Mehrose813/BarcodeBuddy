<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BarcodeBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_green</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/dark_green</item>
        <item name="android:toolbarStyle">@color/dark_green</item>
        <!-- Status bar icons black (false if status bar color is dark) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.BarcodeBuddy" parent="Base.Theme.BarcodeBuddy" />

    <style name="Base.Theme.BarcodeBuddy.NoActionBar" parent="Base.Theme.BarcodeBuddy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.BarcodeBuddy.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.BarcodeBuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>
</resources>
